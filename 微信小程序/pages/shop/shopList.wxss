/* pages/shop/shopList.wxss */
@import 'star.wxss';

.shop_name{
  color: red;
}
.shopicon {
  width: 88px;
  height: 63px;
  margin: 15px 10px 15px 15px;
}
.bg {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.shop_bg {
  width: 100%;
  display: flex;
  flex-direction: row;
}
/*flex :1 占满余下的剩余空间  */
.column_bg {
  display: flex;
  flex: 1;
  margin-top: 15px;
  flex-direction: row;
  justify-content: space-between;
}

.oneColumn {
  display: flex;
  flex-direction: column;
}

.twoColumn {
  display: flex;
  flex-direction: column;
  margin-right: 10px;
}
.shop_name {
  font-size: 14px;
  color: black;
}
.star_count {
  
}

.sales {

}
.grayText {
  font-size: 12px;
  color: gray;
}

.time_bg {
  display: flex;
  flex-direction: row;
  align-self: flex-end;
}

/*上右下左  */
.grayline {
  margin: auto 5px;
  background-color: #aaa;
  width: 1px;
  height: 8px;
}
.third_tag {
  background-color: #fec745;
}

.tagText {
  font-size: 10px;
  color: white;
  height: 15px;
  border-radius:9px; 
  text-align: center;
  padding: 2px 5px;
}

.two_tag {
  background-color: #29c87e;
  margin-right: 5px;
}
.one_tag {
  background-color: #fa7022;
}

.top_tag_bg {
  align-self: flex-end;
}

.bot_tag_bg {
  align-self: flex-end;
}

.line {
  width: auto;
  height: 1px;
  background: #d9d9d9;
  margin-top: 10px;
  margin-left: 15px;
  margin-right: 10px;
}

.shop_list :active {
    background-color: #ececec;
}