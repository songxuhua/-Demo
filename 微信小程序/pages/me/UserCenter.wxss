/* pages/me/UserCenter.wxss */
.bgStyle {
  display: flex;
  flex-direction: column;
  background-color: #dcdcdc;
}

.headStyle {
  margin-top: 10px;
  background-color: white;
}

.headImgStyle {
  width: 40px;
  height: 40px;
  margin: 10px;
  border-radius: 50%;
  border: 1rpx solid lightgray;
}

.userTextStyle {
  font-size: 13px;

}

.downStyle {
  margin-top: 10px;
  background-color: white;
}
.downTextStyle {
  color: olivedrab;
  font-size: 20px;
  margin: 20px 0px 20px 10px;
}
.botStyle {
  width: 100%;
  background-color: white;
  flex-wrap: wrap;
  display: flex;
  flex-direction: row;
  margin-top: 10px;
}

.botItemStyle {
  width: 24.36%;
  border-left: 1rpx solid lightgray;
  border-bottom: 1rpx solid lightgray;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.botItemStyle image {
  width: 40px;
  height: 40px;
  margin: 10px;
  border-radius: 50%;
}

.botItemStyle text {
  font-size: 13px;
  color: #333;
  margin-bottom: 20px;
}
